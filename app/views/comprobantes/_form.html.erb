<%= form_for @comprobante, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :uuid, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :uuid, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :serie, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :serie, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :folio, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :folio, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :rfcemisor, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :rfcemisor, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :rfcreceptor, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :rfcreceptor, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fecha, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :fecha, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :total, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :total, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :subtotal, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :subtotal, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                comprobantes_path, :class => 'btn' %>
  </div>
<% end %>
