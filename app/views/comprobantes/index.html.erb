<%- model_class = Comprobante -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:uuid) %></th>
      <th><%= model_class.human_attribute_name(:serie) %></th>
      <th><%= model_class.human_attribute_name(:folio) %></th>
      <th><%= model_class.human_attribute_name(:rfcemisor) %></th>
      <th><%= model_class.human_attribute_name(:rfcreceptor) %></th>
      <th><%= model_class.human_attribute_name(:fecha) %></th>
      <th><%= model_class.human_attribute_name(:total) %></th>
      <th><%= model_class.human_attribute_name(:subtotal) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @comprobantes.each do |comprobante| %>
      <tr>
        <td><%= link_to comprobante.id, comprobante_path(comprobante) %></td>
        <td><%= comprobante.uuid %></td>
        <td><%= comprobante.serie %></td>
        <td><%= comprobante.folio %></td>
        <td><%= comprobante.rfcemisor %></td>
        <td><%= comprobante.rfcreceptor %></td>
        <td><%= comprobante.fecha %></td>
        <td><%= comprobante.total %></td>
        <td><%= comprobante.subtotal %></td>
        <td><%=l comprobante.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_comprobante_path(comprobante), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      comprobante_path(comprobante),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_comprobante_path,
            :class => 'btn btn-primary' %>
