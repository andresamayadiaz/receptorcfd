<div class="container">
	<div class="row">
		<div class="span6 offset1">
			<div class="login">
				<h2>LOGIN</h2>
				
				<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal" }) do |f| %>
					
				  <div class="control-group"><%= f.label :email, { :class => "control-label" } %>
				  	<div class="controls">
				  		<%= f.email_field :email, :autofocus => true %>
				  	</div>
				  </div>
				
				  <div class="control-group"><%= f.label :password, { :class => "control-label" } %>
				  	<div class="controls">
				  		<%= f.password_field :password %>
				  	</div>
				  </div>
				
				  <% if devise_mapping.rememberable? -%>
				    <div class="control-group"><%= f.label :remember_me, { :class => "control-label" } %>
				    	<div class="controls">
				    		<%= f.check_box :remember_me %> 
				    	</div>
				    </div>
				  <% end -%>
				  
				  <div class="control-group">
				  	<div class="controls">
				  		<%= f.submit "Sign in", {:class=> "btn"} %>
				  	</div>
				  </div>
				<% end %>
				
				
			</div>
		</div>
		<div class="span4">
			<div class="login">
				<% render "users/shared/links" %>
				<h2>Registro</h2>
				
				<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal" }) do |f| %>
				  <%= devise_error_messages! %>
				
				  <div class="control-group"><%= f.label :email, { :class => "control-label" } %>
				  	<div class="controls">
				  		<%= f.email_field :email, :autofocus => true %>
				  	</div>
				  </div>
				
				  <div class="control-group"><%= f.label :password, { :class => "control-label" } %>
				  	<div class="controls">
				  		<%= f.password_field :password %>
				  	</div>
				  </div>
				
				  <div class="control-group"><%= f.label :password_confirmation, { :class => "control-label" } %>
				  	<div class="controls">
				  		<%= f.password_field :password_confirmation %>
				  	</div>
				  </div>
				  <div class="control-group">
				  	<div class="controls">
				  		<%= f.submit "Sign up", { :class => "btn btn-primary" } %>
				  	</div>
				  </div>
				<% end %>
				
			</div>
			</div>
			
		</div>
	</div>
</div>